{
    "metrics": {
        "packet_loss_ratio": {
            "description": "丢包率",
            "threshold": 0.05,
            "window_size": 1000,
            "severity": "high",
            "enabled": true
        },
        "out_of_order_ratio": {
            "description": "乱序比例",
            "threshold": 0.1,
            "window_size": 1000,
            "severity": "medium",
            "enabled": true
        },
        "retransmission_ratio": {
            "description": "重传比例",
            "threshold": 0.08,
            "window_size": 1000,
            "severity": "medium",
            "enabled": true
        },
        "duplicate_ack_ratio": {
            "description": "重复ACK比例",
            "threshold": 0.1,
            "window_size": 1000,
            "severity": "low",
            "enabled": true
        },
        "rtt_variation": {
            "description": "RTT变化率",
            "threshold": 0.5,
            "window_size": 100,
            "severity": "medium",
            "enabled": true
        },
        "connection_failure_rate": {
            "description": "连接失败率",
            "threshold": 0.2,
            "window_size": 100,
            "severity": "high",
            "enabled": true
        },
        "bandwidth_utilization": {
            "description": "带宽利用率",
            "threshold": 0.9,
            "window_size": 60,
            "severity": "medium",
            "enabled": true
        },
        "syn_flood_detection": {
            "description": "SYN洪水检测",
            "threshold": 100,
            "window_size": 10,
            "severity": "critical",
            "enabled": true
        },
        "icmp_flood_detection": {
            "description": "ICMP洪水检测",
            "threshold": 50,
            "window_size": 10,
            "severity": "high",
            "enabled": true
        },
        "fragmentation_ratio": {
            "description": "分片比例",
            "threshold": 0.2,
            "window_size": 1000,
            "severity": "low",
            "enabled": true
        }
    },
    "alert": {
        "min_interval": 180,
        "max_alerts_per_hour": 20,
        "alert_suppression": true,
        "alert_aggregation": true,
        "notification_channels": ["console", "log"]
    },
    "monitoring": {
        "sampling_interval": 1,
        "report_interval": 60,
        "auto_threshold_adjustment": true,
        "learning_period": 3600
    }
}